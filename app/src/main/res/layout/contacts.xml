<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="4dp">

    <helper.PersianTextView
        android:id="@+id/contact_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:text="@string/contact_title"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorLink="@android:color/white"
        android:textSize="35sp"
        android:textStyle="normal|bold"
        app:my_font="shabnam"/>

    <helper.PersianTextView
        android:id="@+id/contact_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact_title"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:gravity="center_vertical|center_horizontal|center"
        android:text="@string/contact_text"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        app:my_font="iran_sans"/>

    <LinearLayout
        android:id="@+id/contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/back"
        android:layout_below="@+id/contact_text"
        android:layout_margin="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:weightSum="12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:background="@drawable/layout_round_2"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageView
                android:id="@+id/contact_phone"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="8"
                android:contentDescription="@string/item_pic"
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_phone"/>

            <TextView
                android:id="@+id/phone_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="+98 918 218 0519"
                android:textColor="@color/black"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:background="@drawable/layout_round_2"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageView
                android:id="@+id/contact_telegram"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="8"
                android:contentDescription="@string/item_pic"
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_telegram"
                />

            <TextView
                android:id="@+id/telegram_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="http://t.me/zimia_ir"
                android:textColor="@color/black"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:background="@drawable/layout_round_2"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageView
                android:id="@+id/contact_email"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="8"
                android:contentDescription="@string/item_pic"
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_email"/>

            <TextView
                android:id="@+id/email_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="info@zimia.ir"
                android:textColor="@color/black"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:background="@drawable/layout_round_2"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageView
                android:id="@+id/contact_website"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="8"
                android:contentDescription="@string/item_pic"
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_web"/>

            <TextView
                android:id="@+id/website_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="http://zimia.ir"
                android:textColor="@color/black"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:background="@drawable/layout_round_2"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageView
                android:id="@+id/contact_direct"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="8"
                android:contentDescription="@string/item_pic"
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_chat"/>

            <helper.PersianTextView
                android:id="@+id/direct_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="ارسال مستقیم پیام"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:my_font="iran_sans"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:background="@drawable/layout_round_2"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageView
                android:id="@+id/contact_location"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="8"
                android:contentDescription="@string/item_pic"
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_location"/>

            <helper.PersianTextView
                android:id="@+id/location_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="خیابان شهید رجایی / مجتمع پردیس / طبقه چهارم"
                android:textColor="@color/black"
                app:my_font="iran_sans"/>
        </LinearLayout>

    </LinearLayout>

    <helper.PersianButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/layout_round"
        android:text="بازگشت"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15sp"/>

</RelativeLayout>