<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:fancy="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/accent"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_above="@+id/btnLogin"
		android:gravity="center"
		android:orientation="vertical">

		<ir.hatamiarash.hyperonline.libraries.IconEditText
			android:id="@+id/new_password_2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginEnd="20dp"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp"
			android:layout_marginStart="20dp"
			android:layout_marginTop="10dp"
			android:background="@drawable/rounded_edittext"
			android:ems="10"
			android:paddingBottom="2dp"
			android:paddingTop="2dp"
			app:hint="شماره تلفن"
			app:iconSrc="@drawable/ic_dialpad"
			app:isPhone="true"/>

		<ir.hatamiarash.hyperonline.libraries.IconEditText
			android:id="@+id/password"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginEnd="20dp"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp"
			android:layout_marginStart="20dp"
			android:layout_marginTop="10dp"
			android:background="@drawable/rounded_edittext"
			android:ems="10"
			android:paddingBottom="2dp"
			android:paddingTop="2dp"
			app:hint="رمز عبور"
			app:iconSrc="@drawable/ic_lock"
			app:isPassword="true"/>

		<mehdi.sakout.fancybuttons.FancyButton
			android:id="@+id/btnLogin"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="20dp"
			android:paddingBottom="15dp"
			android:paddingLeft="70dp"
			android:paddingRight="70dp"
			android:paddingTop="15dp"
			fancy:fb_borderColor="@color/accent"
			fancy:fb_borderWidth="1dp"
			fancy:fb_defaultColor="@color/white"
			fancy:fb_focusColor="@color/white"
			fancy:fb_radius="30dp"
			fancy:fb_text="@string/btn_login"
			fancy:fb_textColor="@color/accent"
			fancy:fb_textSize="20sp"/>
	</LinearLayout>

	<mehdi.sakout.fancybuttons.FancyButton
		android:id="@+id/btnLinkToResetPassword"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_above="@+id/btnLinkToRegisterScreen"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"
		android:layout_marginStart="2.5dp"
		android:layout_marginTop="20dp"
		android:paddingBottom="13dp"
		android:paddingLeft="35dp"
		android:paddingRight="35dp"
		android:paddingTop="13dp"
		fancy:fb_borderColor="@color/white"
		fancy:fb_borderWidth="1dp"
		fancy:fb_defaultColor="@color/accent"
		fancy:fb_focusColor="@color/accent"
		fancy:fb_radius="30dp"
		fancy:fb_text="@string/btn_link_to_resetpassword"
		fancy:fb_textColor="@color/white"
		fancy:fb_textSize="16sp"/>

	<mehdi.sakout.fancybuttons.FancyButton
		android:id="@+id/btnLinkToRegisterScreen"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"
		android:layout_marginEnd="30dp"
		android:layout_marginStart="2.5dp"
		android:layout_marginTop="15dp"
		android:paddingBottom="13dp"
		android:paddingLeft="35dp"
		android:paddingRight="35dp"
		android:paddingTop="13dp"
		fancy:fb_borderColor="@color/white"
		fancy:fb_borderWidth="1dp"
		fancy:fb_defaultColor="@color/accent"
		fancy:fb_focusColor="@color/accent"
		fancy:fb_radius="30dp"
		fancy:fb_text="@string/btn_link_to_register"
		fancy:fb_textColor="@color/white"
		fancy:fb_textSize="16sp"/>

</RelativeLayout>