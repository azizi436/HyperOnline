<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="2dp"
    android:paddingEnd="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingStart="5dp"
    android:paddingTop="2dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/category_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/category_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:scaleType="centerCrop"/>

            <helper.PersianTextView
                android:id="@+id/category_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2.5dp"
                android:layout_toEndOf="@+id/info"
                android:layout_toLeftOf="@+id/category_photo"
                android:layout_toRightOf="@+id/info"
                android:layout_toStartOf="@+id/category_photo"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="نام محصول"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:font="iran_sans"/>

            <helper.PersianTextView
                android:id="@+id/category_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/category_name"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/add_layout"
                android:layout_toLeftOf="@+id/category_photo"
                android:layout_toRightOf="@+id/add_layout"
                android:layout_toStartOf="@+id/category_photo"
                android:gravity="center_vertical"
                android:text="توضیحات"
                android:textColor="@color/gray"
                android:textSize="12sp"
                app:font="iran_sans"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>