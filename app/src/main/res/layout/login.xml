<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <helper.IconEditText
            android:id="@+id/new_password_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/common_google_signin_btn_text_light_default"
            android:ems="10"
            app:hint="شماره تلفن"
            app:iconSrc="@drawable/ic_dialpad"
            app:isPhone="true"/>

        <helper.IconEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/common_google_signin_btn_text_light_default"
            android:ems="10"
            app:hint="رمز عبور"
            app:iconSrc="@drawable/ic_lock"
            app:isPassword="true"/>

        <helper.PersianButton
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:background="@color/colorAccent"
            android:paddingBottom="5dp"
            android:text="@string/btn_login"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="24sp"/>

    </LinearLayout>

    <helper.PersianButton
        android:id="@+id/btnLinkToResetPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnLinkToRegisterScreen"
        android:layout_marginTop="25dp"
        android:background="@color/colorAccent"
        android:text="@string/btn_link_to_resetpassword"
        android:textColor="@color/button_text_color"
        android:textSize="19sp"
        />

    <helper.PersianButton
        android:id="@+id/btnLinkToRegisterScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="1dp"
        android:background="@color/colorAccent"
        android:text="@string/btn_link_to_register"
        android:textColor="@color/button_text_color"
        android:textSize="19sp"/>

</RelativeLayout>